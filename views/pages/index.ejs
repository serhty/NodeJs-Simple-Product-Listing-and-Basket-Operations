    <script src="/public/js/vendor/jquery-migrate-v3.3.2.min.js"></script>
    <script src="/public/js/vendor/popper.min.js"></script>
    <script src="/public/js/vendor/bootstrap.min.js"></script>
    <script src="/public/js/plugins/slick.js"></script>
    <script src="/public/js/plugins/jquery.syotimer.min.js"></script>
    <script src="/public/js/plugins/jquery.nice-select.min.js"></script>
    <script src="/public/js/plugins/wow.js"></script>
    <script src="/public/js/plugins/jquery-ui.js"></script>
    <script src="/public/js/plugins/magnific-popup.js"></script>
    <script src="/public/js/plugins/sticky-sidebar.js"></script>
    <script src="/public/js/plugins/easyzoom.js"></script>
    <script src="/public/js/plugins/scrollup.js"></script>
    <script src="/public/js/plugins/ajax-mail.js"></script>
    <!-- Main JS -->
    <script src="/public/js/main.js"></script>

</body>
</html>