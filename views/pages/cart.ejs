    <link rel="stylesheet" href="/public/css/plugins/magnific-popup.css">
    <link rel="stylesheet" href="/public/css/plugins/jquery-ui.css">
    <link rel="stylesheet" href="/public/css/style.css">

</head>

<body>

    <div class="main-wrapper">
        <header class="header-area transparent-bar section-padding-1">
            <div class="container-fluid">
                <div class="header-large-device">
                    <div class="header-bottom">
                        <div class="row align-items-center">
                            <div class="col-xl-2 col-lg-2">
                                <div class="logo">
                                    <a href="#"><img src="/public/images/logo/logo.png" alt="logo"></a>
                                </div>
                            </div>
                            <div class="col-xl-8 col-lg-7">
                                <div class="main-menu main-menu-padding-1 main-menu-lh-1">
                                    <nav>
                                        <ul>
                                            <li><a href="#">HOME </a></li>
                                            <li><a href="#">SHOP </a></li>
                                            <li><a href="#">CONTACT </a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="cart-main-area pt-115 pb-120">
            <div class="container">
                <h3 class="cart-page-title">Your cart items</h3>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="table-content table-responsive cart-table-content">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Product Name</th>
                                            <th>Until Price</th>
                                            <th>Qty</th>
                                            <th>Subtotal</th>
                                            <th>action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% cart.forEach(function(item){ %>
                                        <tr>
                                            <td class="product-thumbnail">
                                                <img src="/public/images/product/<%= item.image %>" alt="<%= item.name %>">
                                            </td>
                                            <td class="product-name">
                                                <%= item.name %>
                                            </td>
                                            <td class="product-price-cart">
                                                <% if(item.sale_price){ %>
                                                <span class="amount">$<%= item.sale_price %></span>
                                                <span class="amount" style="text-decoration: line-through;"><small>$<%= item.price %></small></span>
                                                <% }else{ %>
                                                <span class="amount">$<%= item.price %></span>
                                                <% } %>
                                            </td>
                                            <td class="product-quantity pro-details-quality">
                                                <div class="">
                                                    <form action="/edit_product_quantity" method="post">
                                                        <input type="hidden" name="id" value="<%= item.id %>">
                                                        <input type="submit" name="decrease_product_quantity" value="-">
                                                        <input class="cart-plus-minus-box" type="text" value="<%= item.quantity %>" readonly>
                                                        <input type="submit" name="increase_product_quantity" value="+">
                                                    </form>
                                                </div>
                                            </td>
                                            <td class="product-subtotal">
                                                <% if(item.sale_price){ %>
                                                $<%= item.sale_price * item.quantity %>
                                                <% }else{ %>
                                                $<%= item.price * item.quantity %>
                                                <% } %>
                                            </td>
                                            <td class="product-remove">
                                                <form action="/remove_product" method="post">
                                                    <input type="hidden" name="id" value="<%= item.id %>">
                                                    <button type="submit" name="remove_button">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="cart-shiping-update-wrapper">
                                        <div class="cart-shiping-update">
                                            <form action="/checkout" method="get">
                                                <button type="submit">Checkout</button>
                                            </form>
                                        </div>
                                        <div class="cart-clear">
                                            <span><b>Total: $ <%= total %></b></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer-area bg-gray pb-30">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="contact-info-wrap">
                            <div class="footer-logo">
                                <a href="#"><img src="/public/images/logo/logo.png" alt="logo"></a>
                            </div>
                            <div class="single-contact-info">
                                <span>Our Location</span>
                                <p>Demo</p>
                            </div>
                            <div class="single-contact-info">
                                <span>24/7 hotline:</span>
                                <p>Demo</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="footer-right-wrap">
                            <div class="footer-menu">
                                <nav>
                                    <ul>
                                        <li><a href="#">home</a></li>
                                        <li><a href="#">Shop</a></li>
                                        <li><a href="#">Product </a></li>
                                        <li><a href="#">Contact</a></li>
                                        <li><a href="#">Blog.</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <div class="social-style-2 social-style-2-mrg">
                                <a href="#"><i class="social_twitter"></i></a>
                                <a href="#"><i class="social_facebook"></i></a>
                                <a href="#"><i class="social_googleplus"></i></a>
                                <a href="#"><i class="social_instagram"></i></a>
                                <a href="#"><i class="social_youtube"></i></a>
                            </div>
                            <div class="copyright">
                                <p>Copyright © 2022 Demo.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

